<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_playcover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_library_music_green_50dp"/>
    <LinearLayout
        android:id="@+id/linelay_playmsg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_playcover"
        android:layout_toStartOf="@id/btn_play_circle"
        android:paddingTop="@dimen/dp_4"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_playmusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/black"
            tools:text="musicname"
            android:lines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_playsinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            tools:text="singer"
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_play_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/btn_skip_next"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_pause_circle_outline_black_40dp"/>
    <Button
        android:id="@+id/btn_skip_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/btn_cancel"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_skip_next_black_32dp"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_stop_red_40dp"/>
</RelativeLayout>